{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@vben/ts-config/vue-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client"],
    "preserveSymlinks": true ,
    "declaration": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.vue",
    "src/**/*.json",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js","src/views/**/*.ts","src/views/**/*.vue"]
}
